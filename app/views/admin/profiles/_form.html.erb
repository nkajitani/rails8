<h2>アカウント編集</h2>

<%= form_for(current_user, url: admin_profile_path, html: { method: :put }) do |f| %>
  <div class="field">
    <div class="item">
      <%= f.label :name, '名前' %>
    </div>
    <div><%= f.text_field :name, autofocus: true, autocomplete: 'name' %></div>
    <% if current_user.errors[:name].present? %>
      <span style="color: red"><%= current_user.errors.full_messages_for(:name).join(', ') %></span>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :email, 'メールアドレス' %>
    <div><%= f.email_field :email, autofocus: true, autocomplete: 'email' %></div>
    <% if current_user.errors[:email].present? %>
      <span style="color: red"><%= current_user.errors.full_messages_for(:email).join(', ') %></span>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード（#{@minimum_password_length}字以上） ※空欄のままなら変更しません" %>
    <div><%= f.password_field :password, autocomplete: 'new-password' %></div>
    <% if current_user.errors[:password].present? %>
      <span style="color: red"><%= current_user.errors.full_messages_for(:password).join(', ') %></span>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'パスワード（確認用）' %>
    <div><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
    <% if current_user.errors[:password_confirmation].present? %>
      <span style="color: red"><%= current_user.errors.full_messages_for(:password_confirmation).join(', ') %></span>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>
