<%= form_with(model: [:admin, post]) do |f| %>
  <div class="field">
    <div class="item">
      <%= f.label :title, 'タイトル' %>
    </div>
    <%= f.text_field :title %>
    <div style="color: red">
      <%= post.errors.full_messages_for(:title).join(', ') if post.errors[:title].present? %>
    </div>
  </div>

  <div class="field">
    <div class="item">
      <%= f.label :body, '本文' %>
    </div>
    <%= f.text_field :body %>
    <div style="color: red">
      <%= post.errors.full_messages_for(:body).join(', ') if post.errors[:body].present? %>
    </div>
  </div>

  <div class="field">
    <div class="item">
      <%= f.label :image, '画像ファイル' %>
    </div>
    <% if @post.image? %>
      <div>
        <%= image_tag @post.image.url %>
      </div>
    <% end %>
    <%= f.file_field :image %>
    <div style="color: red">
      <%= post.errors.full_messages_for(:image).join(', ') if post.errors[:image].present? %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
