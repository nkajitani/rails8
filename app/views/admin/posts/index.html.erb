<% content_for :title, "投稿一覧" %>

<h1>投稿一覧</h1>

<%= paginate @posts %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>画像</th>
      <th>タイトル</th>
      <th>公開日</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.id, admin_post_path(post) %></td>
        <td><%= image_tag post.image.list.url %></td>
        <td><%= post.title %></td>
        <td><%= l(post.published_at, format: :long) %></td>
        <td>
          <%= button_to "編集", edit_admin_post_path(post), method: :get %>
          <%= button_to "削除", admin_post_path(post), method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @posts %>

<%= link_to "新規投稿", new_admin_post_path %>
