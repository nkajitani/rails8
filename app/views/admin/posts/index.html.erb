<p style="color: green"><%= notice %></p>

<% content_for :title, "Posts" %>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", [:admin, post] %>
    </p>
  <% end %>
</div>

<%= link_to "New post", new_admin_post_path %>
