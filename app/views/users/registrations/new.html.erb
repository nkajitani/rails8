<h2>アカウント登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, 'メールアドレス' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    <%= resource.errors.full_messages_for(:email).join(', ') if resource.errors[:email].present? %>
  </div>

  <div class="field">
    <%= f.label :password, 'パスワード' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <%= resource.errors.full_messages_for(:password).join(', ') if resource.errors[:password].present? %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'パスワード（確認用）' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    <%= resource.errors.full_messages_for(:password_confirmation).join(', ') if resource.errors[:password_confirmation].present? %>
  </div>

  <div class="actions">
    <%= f.submit "アカウント登録" %>
  </div>
<% end %>

