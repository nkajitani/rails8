<h2>パスワードを変更</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "パスワード" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
    <%= resource.errors.full_messages_for(:password).join(', ') if resource.errors[:password].present? %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    <%= resource.errors.full_messages_for(:password_confirmation).join(', ') if resource.errors[:password_confirmation].present? %>
  </div>

  <div class="actions">
    <%= f.submit "確認用新しいパスワード" %>
  </div>
<% end %>

